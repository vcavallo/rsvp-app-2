<h1>All Users</h1>

<ol>
  <% @users.each do |user| %>
    <li><%= link_to user.name, user_path(user) %> - 
      <% if user.invites.all.count == 1 %> 
        <%= user.invites.all.count %> invite
      <% else %>
        <%= user.invites.all.count %> invites
      <% end %>
    </li>
  <% end %>
</ol>

<%= link_to 'Create New User', new_user_path %>

<%= render 'footer' %>